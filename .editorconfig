# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Go files and Makefile (Go convention is tabs, Makefiles require tabs)
[{*.go,go.mod,go.sum,Makefile*}]
indent_style = tab
indent_size = 4

# Python and Dockerfiles (PEP 8: 4-space indentation)
[{*.py,Dockerfile*}]
indent_size = 4

# Markdown files (allow trailing whitespace e.g., for line breaks)
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
binary_next_line = true
switch_case_indent = true
space_redirects = true
function_next_line = false
simplify = true
